# PLCAutoPilot Environment Variables
# Automating the Automation - Mass Production Engineering

# ============================================
# Supabase Configuration
# ============================================
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your-project-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# Stripe Payment Configuration
# ============================================
# Get these from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# Anthropic Claude API Configuration
# ============================================
# For AI-powered PLC program generation
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Alternative: OpenAI (if not using Claude)
# OPENAI_API_KEY=sk-your-openai-key
# OPENAI_MODEL=gpt-4-turbo-preview

# ============================================
# Application Configuration
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ============================================
# Email Configuration (Optional)
# ============================================
# For sending notifications and reports
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_FROM=noreply@plcautopilot.com

# ============================================
# Storage Configuration
# ============================================
# Supabase Storage buckets
STORAGE_BUCKET_PROGRAMS=plc-programs
STORAGE_BUCKET_UPLOADS=user-uploads
STORAGE_BUCKET_ERROR_SCREENSHOTS=error-screenshots

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Feature Flags
# ============================================
ENABLE_ENGINEER_CHAT=true
ENABLE_LEARNING_SYSTEM=true
ENABLE_ANALYTICS=true

# ============================================
# Security
# ============================================
JWT_SECRET=your-jwt-secret-key-min-32-chars
ENCRYPTION_KEY=your-encryption-key-min-32-chars

# ============================================
# Third-Party Integrations
# ============================================
# SCADA Integration
SCADA_API_ENDPOINT=https://api.scada-provider.com
SCADA_API_KEY=your-scada-api-key

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
