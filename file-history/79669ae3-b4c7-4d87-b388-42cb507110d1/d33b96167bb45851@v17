          <button
            onClick={handlePersonalSignup}
            className="inline-flex items-center justify-center gap-2 px-10 py-4 bg-[#00897B] hover:bg-[#00796B] text-white rounded-full text-lg font-semibold transition-all hover:scale-105 shadow-lg mb-8"
