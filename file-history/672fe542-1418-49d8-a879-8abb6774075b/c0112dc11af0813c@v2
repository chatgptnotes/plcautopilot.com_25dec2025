    <div style="margin-top: 20px;">
      <button onclick="checkDatabase()" id="checkBtn">1. Check Database</button>
      <button onclick="addClinicCodeColumn()" id="addColumnBtn">2. Add clinic_code Column</button>
      <button onclick="generateClinicCodes()" id="generateBtn">3. Generate Clinic Codes</button>
      <button onclick="testPatientUid()" id="testBtn">4. Test UID Generation</button>
    </div>

    <div id="output">Ready to start migration...\n</div>
