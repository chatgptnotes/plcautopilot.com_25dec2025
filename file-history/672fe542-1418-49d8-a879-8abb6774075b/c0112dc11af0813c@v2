  <script>
    const SUPABASE_URL = 'https://omyltmcesgbhnqmhrrvq.supabase.co';
    const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Im9teWx0bWNlc2diaG5xbWhycnZxIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTgxNzY2NTAsImV4cCI6MjA3Mzc1MjY1MH0.d4VqaDBlrEJ1xYPt4kt60y90RRbtndRRaF9WzpWxWcU';

    const supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
    const output = document.getElementById('output');

    function log(message, type = 'info') {
      const timestamp = new Date().toLocaleTimeString();
      const className = type;
      output.innerHTML += `<span class="${className}">[${timestamp}] ${message}</span>\n`;
      output.scrollTop = output.scrollHeight;
      console.log(message);
    }

    async function checkDatabase() {
      log('üîç Checking database structure...', 'info');

      try {
        const { data, error } = await supabase
          .from('organizations')
          .select('*')
          .limit(1);

        if (error) {
          log('‚ùå Error: ' + error.message, 'error');
          return;
        }

        if (data && data.length > 0) {
          const columns = Object.keys(data[0]);
          log('‚úÖ Organizations table found', 'success');
          log('üìã Columns: ' + columns.join(', '), 'info');

          if (columns.includes('clinic_code')) {
            log('‚úÖ clinic_code column already exists!', 'success');
          } else {
            log('‚ö†Ô∏è clinic_code column NOT found - needs to be added', 'warning');
          }
        }

        // Check all organizations
        const { data: allOrgs, error: countError } = await supabase
          .from('organizations')
          .select('id, name, clinic_code');

        if (countError) {
          log('‚ùå Error fetching organizations: ' + countError.message, 'error');
          return;
        }

        log(`\nüìä Found ${allOrgs.length} organizations:`, 'info');
        allOrgs.forEach(org => {
          const status = org.clinic_code ? '‚úÖ' : '‚ö†Ô∏è';
          log(`${status} ${org.name}: ${org.clinic_code || 'NO CODE'}`, org.clinic_code ? 'success' : 'warning');
        });

      } catch (err) {
        log('‚ùå Unexpected error: ' + err.message, 'error');
      }
    }

    async function addClinicCodeColumn() {
      log('\n‚öôÔ∏è Attempting to add clinic_code column...', 'info');
      log('‚ö†Ô∏è Note: This requires ADMIN access via Supabase SQL Editor', 'warning');
      log('\nPlease run this SQL in Supabase Dashboard > SQL Editor:\n', 'info');

      const sql = `-- Add clinic_code column to organizations
ALTER TABLE organizations
ADD COLUMN IF NOT EXISTS clinic_code VARCHAR(50);

-- Add unique constraint
ALTER TABLE organizations
ADD CONSTRAINT organizations_clinic_code_key UNIQUE (clinic_code);

-- Create index
CREATE INDEX IF NOT EXISTS idx_organizations_clinic_code ON organizations(clinic_code);`;

      log(sql, 'info');
      log('\n‚úÖ Copy the SQL above and run it in Supabase SQL Editor', 'success');
      log('Then click "Check Database" to verify', 'info');
    }

    async function generateClinicCodes() {
      log('\nüî® Generating clinic codes...', 'info');

      try {
        const { data: organizations, error: fetchError } = await supabase
          .from('organizations')
          .select('id, name, clinic_code');

        if (fetchError) {
          log('‚ùå Error fetching organizations: ' + fetchError.message, 'error');
          return;
        }

        log(`‚úÖ Found ${organizations.length} organizations`, 'success');

        const usedCodes = new Set();
        let updated = 0;

        // Collect existing codes
        organizations.forEach(org => {
          if (org.clinic_code) {
            usedCodes.add(org.clinic_code);
          }
        });

        // Generate codes for organizations without them
        for (const org of organizations) {
          if (!org.clinic_code) {
            let baseCode = org.name
              .toUpperCase()
              .replace(/[^A-Z0-9]/g, '')
              .substring(0, 8);

            if (!baseCode) baseCode = 'CLINIC';

            let finalCode = baseCode;
            let counter = 1;

            while (usedCodes.has(finalCode)) {
              finalCode = baseCode + String(counter).padStart(2, '0');
              counter++;
            }

            usedCodes.add(finalCode);

            log(`Updating "${org.name}" ‚Üí "${finalCode}"...`, 'info');

            const { error: updateError } = await supabase
              .from('organizations')
              .update({ clinic_code: finalCode })
              .eq('id', org.id);

            if (updateError) {
              log(`‚ùå Failed to update "${org.name}": ${updateError.message}`, 'error');
            } else {
              log(`‚úÖ "${org.name}" ‚Üí "${finalCode}"`, 'success');
              updated++;
            }
          } else {
            log(`‚ÑπÔ∏è "${org.name}" already has: ${org.clinic_code}`, 'info');
          }
        }

        log(`\n‚úÖ Migration completed!`, 'success');
        log(`üìä Summary: ${updated} updated, ${organizations.length - updated} existing`, 'success');

      } catch (err) {
        log('‚ùå Error: ' + err.message, 'error');
      }
    }

    async function testPatientUid() {
      log('\nüß™ Testing patient UID generation...', 'info');

      try {
        const { data: orgs, error } = await supabase
          .from('organizations')
          .select('id, name, clinic_code')
          .limit(1);

        if (error || !orgs || orgs.length === 0) {
          log('‚ùå No organizations found', 'error');
          return;
        }

        const org = orgs[0];
        if (!org.clinic_code) {
          log('‚ùå Organization has no clinic_code yet. Run step 3 first.', 'error');
          return;
        }

        const now = new Date();
        const year = now.getFullYear();
        const month = String(now.getMonth() + 1).padStart(2, '0');
        const yearMonth = `${year}${month}`;

        const testUid = `${org.clinic_code}-${yearMonth}-0001`;

        log(`‚úÖ Test UID generated successfully!`, 'success');
        log(`Organization: ${org.name}`, 'info');
        log(`Clinic Code: ${org.clinic_code}`, 'info');
        log(`Sample UID: ${testUid}`, 'success');
        log(`\nüéâ Patient UID system is ready!`, 'success');

      } catch (err) {
        log('‚ùå Error: ' + err.message, 'error');
      }
    }
  </script>
