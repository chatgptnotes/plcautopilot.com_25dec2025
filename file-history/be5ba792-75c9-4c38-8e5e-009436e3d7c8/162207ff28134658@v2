  <script>
    // Supabase configuration
    const SUPABASE_URL = 'https://wqykofpjpaytjuqsessf.supabase.co';
    const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6IndxeWtvZnBqcGF5dGp1cXNlc3NmIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjUxODExNjksImV4cCI6MjA4MDc1NzE2OX0.J4jAksh4IPUfSPQyW2U8_OoU3G_tP6g236lPF9e9xo4';

    // Initialize Supabase client
    const supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);

    // Display configuration
    document.getElementById('config').innerHTML = `
      <p><strong>URL:</strong> ${SUPABASE_URL}</p>
      <p><strong>Anon Key:</strong> ${SUPABASE_ANON_KEY.substring(0, 30)}...</p>
    `;

    async function testConnection() {
      const resultDiv = document.getElementById('connectionResult');
      resultDiv.innerHTML = '<p>Testing connection...</p>';

      try {
        const { data, error } = await supabase
          .from('clinics')
          .select('id')
          .limit(1);

        if (error) throw error;

        resultDiv.innerHTML = `<p class="success">‚úÖ Connection successful!</p>`;
      } catch (error) {
        resultDiv.innerHTML = `<p class="error">‚ùå Connection failed: ${error.message}</p>`;
      }
    }

    async function loadClinics() {
      const resultDiv = document.getElementById('clinicsResult');
      resultDiv.innerHTML = '<p>Loading clinics...</p>';

      try {
        const { data, error } = await supabase
          .from('clinics')
          .select('*')
          .order('created_at', { ascending: false });

        if (error) throw error;

        let html = `<p class="success">‚úÖ Found ${data.length} clinics</p>`;

        if (data.length > 0) {
          html += `
            <table class="data-table">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>Status</th>
                  <th>Reports Used</th>
                  <th>Has Password</th>
                </tr>
              </thead>
              <tbody>
          `;

          data.forEach(clinic => {
            const statusClass = clinic.subscription_status === 'active' ? 'status-active' : 'status-trial';
            html += `
              <tr>
                <td>${clinic.name}</td>
                <td>${clinic.email}</td>
                <td>${clinic.phone || 'N/A'}</td>
                <td><span class="status-badge ${statusClass}">${clinic.subscription_status}</span></td>
                <td>${clinic.reports_used} / ${clinic.reports_allowed}</td>
                <td>${clinic.password ? '‚úÖ Yes' : '‚ùå No'}</td>
              </tr>
            `;
          });

          html += '</tbody></table>';
        }

        resultDiv.innerHTML = html;
      } catch (error) {
        resultDiv.innerHTML = `<p class="error">‚ùå Error: ${error.message}</p>`;
      }
    }

    async function loadPatients() {
      const resultDiv = document.getElementById('patientsResult');
      resultDiv.innerHTML = '<p>Loading patients...</p>';

      try {
        const { data, error } = await supabase
          .from('patients')
          .select('*')
          .order('created_at', { ascending: false });

        if (error) throw error;

        let html = `<p class="success">‚úÖ Found ${data.length} patients</p>`;

        if (data.length > 0) {
          html += `
            <table class="data-table">
              <thead>
                <tr>
                  <th>Patient ID</th>
                  <th>Full Name</th>
                  <th>Gender</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>Date of Birth</th>
                </tr>
              </thead>
              <tbody>
          `;

          data.forEach(patient => {
            html += `
              <tr>
                <td>${patient.external_id}</td>
                <td>${patient.full_name}</td>
                <td>${patient.gender}</td>
                <td>${patient.email}</td>
                <td>${patient.phone}</td>
                <td>${patient.date_of_birth}</td>
              </tr>
            `;
          });

          html += '</tbody></table>';
        }

        resultDiv.innerHTML = html;
      } catch (error) {
        resultDiv.innerHTML = `<p class="error">‚ùå Error: ${error.message}</p>`;
      }
    }

    async function loadProfiles() {
      const resultDiv = document.getElementById('profilesResult');
      resultDiv.innerHTML = '<p>Loading profiles...</p>';

      try {
        const { data, error } = await supabase
          .from('profiles')
          .select('*')
          .order('created_at', { ascending: false });

        if (error) throw error;

        let html = `<p class="success">‚úÖ Found ${data.length} profiles</p>`;

        if (data.length > 0) {
          html += `
            <table class="data-table">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Role</th>
                  <th>Phone</th>
                </tr>
              </thead>
              <tbody>
          `;

          data.forEach(profile => {
            html += `
              <tr>
                <td>${profile.full_name}</td>
                <td>${profile.email}</td>
                <td><span class="status-badge status-active">${profile.role}</span></td>
                <td>${profile.phone || 'N/A'}</td>
              </tr>
            `;
          });

          html += '</tbody></table>';
        }

        resultDiv.innerHTML = html;
      } catch (error) {
        resultDiv.innerHTML = `<p class="error">‚ùå Error: ${error.message}</p>`;
      }
    }

    async function loadReports() {
      const resultDiv = document.getElementById('reportsResult');
      resultDiv.innerHTML = '<p>Loading reports...</p>';

      try {
        const { data, error } = await supabase
          .from('reports')
          .select('*')
          .order('created_at', { ascending: false });

        if (error) throw error;

        let html = `<p class="success">‚úÖ Found ${data.length} reports</p>`;

        if (data.length > 0) {
          html += `
            <table class="data-table">
              <thead>
                <tr>
                  <th>File Name</th>
                  <th>Status</th>
                  <th>Created At</th>
                </tr>
              </thead>
              <tbody>
          `;

          data.forEach(report => {
            html += `
              <tr>
                <td>${report.file_name}</td>
                <td><span class="status-badge ${report.status === 'completed' ? 'status-active' : 'status-trial'}">${report.status}</span></td>
                <td>${new Date(report.created_at).toLocaleString()}</td>
              </tr>
            `;
          });

          html += '</tbody></table>';
        }

        resultDiv.innerHTML = html;
      } catch (error) {
        resultDiv.innerHTML = `<p class="error">‚ùå Error: ${error.message}</p>`;
      }
    }

    async function testLogin() {
      const email = document.getElementById('loginEmail').value;
      const password = document.getElementById('loginPassword').value;
      const resultDiv = document.getElementById('loginResult');

      if (!email || !password) {
        resultDiv.innerHTML = '<p class="error">‚ùå Please enter email and password</p>';
        return;
      }

      resultDiv.innerHTML = '<p>Testing login...</p>';

      try {
        // First check if user exists in clinics table
        const { data: clinicData, error: clinicError } = await supabase
          .from('clinics')
          .select('*')
          .eq('email', email.toLowerCase())
          .single();

        if (clinicError && clinicError.code !== 'PGRST116') throw clinicError;

        if (clinicData) {
          if (clinicData.password === password) {
            resultDiv.innerHTML = `
              <p class="success">‚úÖ Clinic login successful!</p>
              <pre>${JSON.stringify({
                name: clinicData.name,
                email: clinicData.email,
                role: 'clinic_admin',
                is_active: clinicData.is_active,
                subscription_status: clinicData.subscription_status
              }, null, 2)}</pre>
            `;
            return;
          } else {
            resultDiv.innerHTML = '<p class="error">‚ùå Invalid password for clinic</p>';
            return;
          }
        }

        // Check profiles table for super admin
        const { data: profileData, error: profileError } = await supabase
          .from('profiles')
          .select('*')
          .eq('email', email.toLowerCase())
          .eq('role', 'super_admin')
          .single();

        if (profileError && profileError.code !== 'PGRST116') throw profileError;

        if (profileData) {
          // Try Supabase auth
          const { data: authData, error: authError } = await supabase.auth.signInWithPassword({
            email: email,
            password: password
          });

          if (authError) {
            resultDiv.innerHTML = `<p class="error">‚ùå Auth error: ${authError.message}</p>`;
            return;
          }

          resultDiv.innerHTML = `
            <p class="success">‚úÖ Super admin login successful!</p>
            <pre>${JSON.stringify({
              name: profileData.full_name,
              email: profileData.email,
              role: profileData.role
            }, null, 2)}</pre>
          `;
          return;
        }

        resultDiv.innerHTML = '<p class="error">‚ùå User not found</p>';
      } catch (error) {
        resultDiv.innerHTML = `<p class="error">‚ùå Login error: ${error.message}</p>`;
      }
    }

    // Auto-run connection test on load
    window.onload = () => {
      testConnection();
    };
  </script>
