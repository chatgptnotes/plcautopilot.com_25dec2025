      {/* Clinical Report Information */}
      {clinicalReport && (
        <>
          {/* Patient Information from Clinical Report */}
          <div className="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-xl p-6">
