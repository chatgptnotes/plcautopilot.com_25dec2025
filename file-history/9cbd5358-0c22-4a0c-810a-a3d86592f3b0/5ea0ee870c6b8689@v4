import React, { useState, useEffect, useRef } from 'react';

const BrainParametersSlider = () => {
  const [currentIndex, setCurrentIndex] = useState(0);
  const scrollContainerRef = useRef(null);

  const parameters = [
    { name: 'Attention', value: 85, color: 'from-blue-500 to-blue-600', circleColor: '#3b82f6', description: 'Focus & concentration levels' },
    { name: 'Focus', value: 78, color: 'from-indigo-500 to-indigo-600', circleColor: '#6366f1', description: 'Mental clarity & awareness' },
    { name: 'Relaxation', value: 72, color: 'from-green-500 to-green-600', circleColor: '#22c55e', description: 'Stress-free mental state' },
    { name: 'Memory', value: 88, color: 'from-purple-500 to-purple-600', circleColor: '#a855f7', description: 'Information retention' },
    { name: 'Creativity', value: 75, color: 'from-pink-500 to-pink-600', circleColor: '#ec4899', description: 'Innovative thinking ability' },
    { name: 'Regeneration', value: 82, color: 'from-teal-500 to-teal-600', circleColor: '#14b8a6', description: 'Brain recovery & healing' },
    { name: 'Peak Performance', value: 90, color: 'from-orange-500 to-orange-600', circleColor: '#f97316', description: 'Optimal mental output' },
    { name: 'Stress', value: 35, color: 'from-red-500 to-red-600', circleColor: '#ef4444', description: 'Mental pressure levels', inverse: true },
    { name: 'Cognition', value: 86, color: 'from-cyan-500 to-cyan-600', circleColor: '#06b6d4', description: 'Mental processing speed' },
    { name: 'Mood', value: 80, color: 'from-yellow-500 to-yellow-600', circleColor: '#eab308', description: 'Emotional well-being' },
    { name: 'Emotional Regulation', value: 77, color: 'from-rose-500 to-rose-600', circleColor: '#f43f5e', description: 'Emotional control' },
    { name: 'Sleep', value: 84, color: 'from-violet-500 to-violet-600', circleColor: '#8b5cf6', description: 'Sleep quality score' },
  ];

  // Auto-scroll functionality
  useEffect(() => {
    const interval = setInterval(() => {
      setCurrentIndex((prev) => (prev + 1) % parameters.length);
    }, 3000);
    return () => clearInterval(interval);
  }, [parameters.length]);

  // Scroll to current index
  useEffect(() => {
    if (scrollContainerRef.current) {
      const container = scrollContainerRef.current;
      const cardWidth = container.offsetWidth;
      container.scrollTo({
        left: currentIndex * cardWidth,
        behavior: 'smooth'
      });
    }
  }, [currentIndex]);

  return (
    <section className="py-16 sm:py-20 md:py-24 bg-white">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div className="text-center mb-12">
          <h2 className="text-4xl sm:text-5xl font-bold text-[#323956] mb-4">
            Measure
          </h2>
          <p className="text-xl text-gray-600 max-w-2xl mx-auto">
            Receive your brain and wellness report with over 13 parameters
          </p>
        </div>

        {/* Horizontal Scrolling Container */}
        <div className="relative">
          <div
            ref={scrollContainerRef}
            className="flex overflow-x-auto snap-x snap-mandatory scrollbar-hide gap-6 pb-8"
            style={{ scrollbarWidth: 'none', msOverflowStyle: 'none' }}
          >
            {parameters.map((param, index) => (
              <div
                key={param.name}
                className="flex-shrink-0 w-full sm:w-80 snap-center"
              >
                <div className="bg-white rounded-3xl p-8 shadow-2xl border-2 border-gray-100 hover:border-blue-300 transition-all duration-300 transform hover:scale-105 h-full">
                  {/* Circular Progress */}
                  <div className="flex justify-center mb-6">
                    <div className="relative w-48 h-48">
                      <svg className="w-full h-full transform -rotate-90">
                        {/* Background circle */}
                        <circle
                          cx="96"
                          cy="96"
                          r="88"
                          stroke="#e5e7eb"
                          strokeWidth="12"
                          fill="none"
                        />
                        {/* Progress circle */}
                        <circle
                          cx="96"
                          cy="96"
                          r="88"
                          stroke={param.circleColor}
                          strokeWidth="12"
                          fill="none"
                          strokeDasharray={`${2 * Math.PI * 88}`}
                          strokeDashoffset={`${2 * Math.PI * 88 * (1 - param.value / 100)}`}
                          strokeLinecap="round"
                          className="transition-all duration-1000 ease-out"
                        />
                      </svg>

                      {/* Center text */}
                      <div className="absolute inset-0 flex items-center justify-center flex-col">
                        <span className="text-5xl font-bold text-gray-900">{param.value}%</span>
                      </div>
                    </div>
                  </div>

                  {/* Parameter Name */}
                  <h3 className="text-2xl font-bold text-center text-gray-900 mb-2">
                    {param.name}
                  </h3>

                  {/* Description */}
                  <p className="text-center text-gray-600 mb-4">
                    {param.description}
                  </p>

                  {/* Button */}
                  <div className="flex justify-center mt-6">
                    <button className={`px-8 py-3 bg-gradient-to-r ${param.color} text-white rounded-full font-semibold shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300`}>
                      Optimize
                    </button>
                  </div>
                </div>
              </div>
            ))}
          </div>

          {/* Navigation Dots */}
          <div className="flex justify-center gap-2 mt-8">
            {parameters.map((_, index) => (
              <button
                key={index}
                onClick={() => setCurrentIndex(index)}
                className={`w-3 h-3 rounded-full transition-all duration-300 ${
                  index === currentIndex
                    ? 'bg-blue-600 w-8'
                    : 'bg-gray-300 hover:bg-gray-400'
                }`}
                aria-label={`Go to parameter ${index + 1}`}
              />
            ))}
          </div>
        </div>

        {/* Description Text */}
        <div className="max-w-3xl mx-auto mt-12 text-center">
          <p className="text-base sm:text-lg leading-relaxed mb-8">
            Measure your mind. Get your brain scanned in just <span className="font-semibold">15 minutes</span>, receive your detailed <span className="font-semibold">BMW (Brain and Mental Wellness) report</span> with over <span className="font-semibold">13 parameters</span> within 24 hours, and begin your journey toward a healthier and sharper brain.
          </p>

          {/* CTA Button */}
          <div className="flex justify-center">
            <button className="inline-flex items-center justify-center gap-2 px-8 py-4 bg-[#323956] hover:bg-[#232D3C] text-white rounded-full text-lg font-medium transition-all hover:scale-105 shadow-lg">
              Book Your Brain Scan
              <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5l7 7-7 7" />
              </svg>
            </button>
          </div>
        </div>
      </div>

      <style jsx>{`
        .scrollbar-hide::-webkit-scrollbar {
          display: none;
        }
        .scrollbar-hide {
          -ms-overflow-style: none;
          scrollbar-width: none;
        }
      `}</style>
    </section>
  );
};

export default BrainParametersSlider;
